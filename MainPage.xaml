<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVMobileApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="leo_img_gray.png"
                HeightRequest="185"
                Aspect="AspectFit"
                HorizontalOptions="End"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Hello guys, this is a mobile app to show you my coding skills, experience and past tasks! I recently started experimented with mobile apps so this is the outcome of the tutorials and my personal coding."
                HorizontalOptions="Start"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="CounterBtn"
                Text="Let's get started!" 
                SemanticProperties.Hint="Start the tour" 
                Clicked="OnMainPageButtonClicked"
                VerticalOptions="End"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
